{
  "openapi": "3.0.0",
  "info": {
    "title": "JokeHub API",
    "version": "1.0.0",
    "description": "API documentation for JokeHub"
  },
  "servers": [
    {
      "url": "http://localhost:3001/api/v1",
      "description": "Local server"
    }
  ],
  "paths": {
    "/jokes": {
      "get": {
        "summary": "Get all jokes",
        "operationId": "getJokes",
        "tags": ["Jokes"],
        "responses": {
          "200": {
            "description": "A list of jokes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Joke"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new joke",
        "operationId": "createJoke",
        "tags": ["Jokes"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewJoke"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Joke created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Joke"
                }
              }
            }
          }
        }
      }
    },
    "/jokes/{id}": {
      "get": {
        "summary": "Get a joke by ID",
        "operationId": "getJokeById",
        "tags": ["Jokes"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the joke to retrieve"
          }
        ],
        "responses": {
          "200": {
            "description": "Joke retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Joke"
                }
              }
            }
          },
          "404": {
            "description": "Joke not found"
          }
        }
      },
      "put": {
        "summary": "Update a joke by ID",
        "operationId": "updateJoke",
        "tags": ["Jokes"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the joke to update"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateJoke"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Joke updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Joke"
                }
              }
            }
          },
          "404": {
            "description": "Joke not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a joke by ID",
        "operationId": "deleteJoke",
        "tags": ["Jokes"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the joke to delete"
          }
        ],
        "responses": {
          "204": {
            "description": "Joke deleted successfully"
          },
          "404": {
            "description": "Joke not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Joke": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "5f8d0d55b54764421b7156c3"
          },
          "setup": {
            "type": "string",
            "example": "Why don't scientists trust atoms?"
          },
          "punchline": {
            "type": "string",
            "example": "Because they make up everything!"
          },
          "type": {
            "type": "string",
            "example": "general"
          },
          "author": {
            "type": "string",
            "example": "John Doe"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2023-07-20T12:34:56.789Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2023-07-20T12:34:56.789Z"
          }
        }
      },
      "NewJoke": {
        "type": "object",
        "properties": {
          "setup": {
            "type": "string",
            "example": "Why don't scientists trust atoms?"
          },
          "punchline": {
            "type": "string",
            "example": "Because they make up everything!"
          },
          "type": {
            "type": "string",
            "example": "general"
          },
          "author": {
            "type": "string",
            "example": "John Doe"
          }
        },
        "required": ["setup", "punchline", "type", "author"]
      },
      "UpdateJoke": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string",
            "example": "Why don't scientists trust atoms? Because they make up everything!"
          },
          "author": {
            "type": "string",
            "example": "John Doe"
          }
        }
      }
    }
  }
}
